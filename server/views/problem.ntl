<!DOCTYPE html>
<html lang="zh-CN">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="theme-color" content="#222222">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="shortcut icon" href="/xmatrix.ico">
  <title>XMatrix</title>

  <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.bootcss.com/codemirror/5.25.0/codemirror.css" rel="stylesheet">
  <link href="https://cdn.bootcss.com/codemirror/5.25.0/addon/hint/show-hint.min.css" rel="stylesheet">
  <link href="https://cdn.bootcss.com/codemirror/5.25.0/theme/blackboard.min.css" rel="stylesheet">
  <link href="/css/nav-tabs.css" rel="stylesheet">

  <script src="https://cdn.bootcss.com/codemirror/5.25.0/codemirror.js"></script>
  <script src="https://cdn.bootcss.com/codemirror/5.25.0/addon/edit/closebrackets.min.js"></script>
  <script src="https://cdn.bootcss.com/codemirror/5.25.0/addon/edit/closetag.min.js"></script>
  <script src="https://cdn.bootcss.com/codemirror/5.25.0/addon/edit/continuelist.min.js"></script>
  <script src="https://cdn.bootcss.com/codemirror/5.25.0/addon/edit/matchbrackets.min.js"></script>
  <script src="https://cdn.bootcss.com/codemirror/5.25.0/addon/edit/matchtags.min.js"></script>
  <script src="https://cdn.bootcss.com/codemirror/5.25.0/addon/edit/trailingspace.min.js"></script>
  <script src="https://cdn.bootcss.com/codemirror/5.25.0/addon/hint/javascript-hint.min.js"></script>
  <script src="https://cdn.bootcss.com/codemirror/5.25.0/addon/hint/show-hint.min.js"></script>
  <script src="https://cdn.bootcss.com/codemirror/5.25.0/mode/clike/clike.min.js"></script>

  <script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://cdn.bootcss.com/showdown/1.6.4/showdown.min.js"></script>
  <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <script src="/js/xmatrix.js"></script>
  <style type="text/css">
    body {
      padding-top: 70px;
      background-color: #EEEEEE;
    }
  </style>

  <script type="text/javascript">
    $(function () {
      $("#nav-bar").load("/nav-bar.html", function () {
        var username = getCookie("name");
        if (username !== null && username !== "") document.getElementById('userBar').innerHTML = username + ' <span class="caret"></span>';
        document.getElementById("barman").src="../../pic/man.png";
        $("#t-problem").addClass("active");
        testcode();
        $('#myTab a:first').tab('show');
      });
    });//处理标题栏
    $.get("/problems/#pid#.md", function (result) {
      var converter = new showdown.Converter();
      $("#mymarkdown").html(converter.makeHtml(result));
    });
  </script>
</head>

<body>
  <div id="nav-bar"></div>
  <div class="container-fluid">
    <div class="row-fluid">

      <!-- Nav tabs -->
      <div class="col-md-10 col-md-offset-1">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li role="presentation"><a href="#home" data-toggle="tab" aria-controls="home" role="tab" ><span class="glyphicon glyphicon-align-left" aria-hidden="true"></span> 问题描述</a></li>
          <li role="presentation" class="active"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab" onclick="isLogin()"><span class="glyphicon glyphicon-console" aria-hidden="true"></span> 代码提交</a></li>
          <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab" onclick="isLogin()"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> 成绩报告</a></li>
          <li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab" onclick="isLogin()"><span class="glyphicon glyphicon-sort-by-attributes" aria-hidden="true"></span> 排名情况</a></li>
        </ul>
        <br>
      </div>
      <!-- Tab panes -->
      <div class="tab-content tabs">

        <div role="tabpanel" class="tab-pane" id="home">
          <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default">
              <div class="panel-body" style="padding-left:30px;padding-top:30px;font-size: 20px"><span class="glyphicon glyphicon-tasks" aria-hidden="true"></span><strong> #pTitle#</strong></div>
              <div class="panel-body" style="padding:10px;">

                <div class="col-xs-9">
                  <p>时间限制 : #pTimeLimit# ms</p>
                  <p>空间限制 : #pMemLimit# KB</p>
                </div>
                <div class="col-xs-3 hidden-xs">
                  <p>出题：#pMan#</p>
                  <p>邮箱：#pManEmail#</p>
                </div>
              </div>
            </div>

            <div class="panel panel-default">
              <div class="panel-body">
                <div id="mymarkdown" class="markdown-body" style="padding:15px;">
                </div>
              </div>
            </div>
          </div>
        </div>

        <div role="tabpanel" class="tab-pane active" id="profile">
          <br>
          <br>
          <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default" style="background-color: #0C1021;">
              <div class="panel-body">
                <div class="form-group">
                  <textarea id="codetext" name="codetext" class="form-control">#code#</textarea>
                </div>
              </div>
            </div>

            <div class="form-group" style="text-align: right;">
              <a class="btn btn-success" onclick="running()">提交</a>
            </div>
          </div>
        </div>

        <div role="tabpanel" class="tab-pane" id="messages">
          <div class="col-md-12" style="padding: 14px;">
            <div class="panel panel-default col-md-3 col-md-offset-1">
              <div class="panel-body">
                <p style="padding: 10px;text-align: left;font-size:25px;"> 你的成绩：</p>
                <p id="j_grade" style="text-align: center;font-size:60px;color:##jGrade_c#;">#jGrade#</p>
              </div>
              <div class="progress">
                <div id="j_pro" class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"
                style="width: #jGrade_p#%">
              </div>
            </div>
          </div>
          <div class="panel panel-default col-md-6 col-md-offset-1">
            <div class="panel-body" style="text-align:left;">
              <p id="j_Ltime" style="padding: 14px;font-size:20px;"> 最后提交：#jLtime#</p>
              <p id="j_Rtime" style="padding: 14px;font-size:20px;"> 运行时间：#jRtime# ms</p>
              <p id="j_men" style="padding: 14px;font-size:20px;"> 最高分数：#jMGrade#</p>
            </div>
          </div>
        </div>
        <div class="col-md-10 col-md-offset-1">

          <div class="panel panel-default">
            <div class="panel-body">
              <p id="j_test1" style="font-size:20px;color:##jGrade1_c#;"> 编译测试 #jGrade1#<span class="glyphicon glyphicon-#jGrade1_g#" style="float:right;"></span></p>
            </div>
            <div id="j_info1" class="panel-footer">#jText1#</div>
          </div>

          <div class="panel panel-default">
            <div class="panel-body">
              <p id="j_test2" style="font-size:20px;color:##jGrade2_c#;"> 标准测试 #jGrade2#<span class="glyphicon glyphicon-#jGrade2_g#" style="float:right;"></span></p>
            </div>
            <div id="j_info2"  class="panel-footer">#jText2#</div>
          </div>

          <div class="panel panel-default">
            <div class="panel-body">
              <p id="j_test3" style="font-size:20px;color:##jGrade3_c#;"> 随机测试 #jGrade3#<span class="glyphicon glyphicon-#jGrade3_g#" style="float:right;"></span></p>
            </div>
            <div id="j_info3"  class="panel-footer">#jText3#</div>
          </div>

          <div class="panel panel-default">
            <div class="panel-body">
              <p id="j_test4" style="font-size:20px;color:##jGrade4_c#;"> 内存测试 #jGrade4#<span class="glyphicon glyphicon-#jGrade4_g#" style="float:right;"></span></p>
            </div>
            <div id="j_info4"  class="panel-footer">#jText4#</div>
          </div>
        </div>
      </div>

      <div role="tabpanel" class="tab-pane" id="settings">
       <div class="col-md-10 col-md-offset-1" style="padding: 20px;">
        <div class="panel panel-success">
         <div class="panel-body">
          <p style="font-size:30px;color:#479EA2;padding: 20px;padding-bottom: 0px;"><span class="glyphicon glyphicon-king"></span> Rank</p>
        </div>
        <div class="panel-body" style="padding-left: 40px;padding-right: 40px;">
          #rank#
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
</div>


</body>

</html>
